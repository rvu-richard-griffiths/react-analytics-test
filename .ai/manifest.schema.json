{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/rvu-richard-griffiths/react-analytics-test/schemas/component-manifest.json",
  "title": "React Component Library Manifest",
  "description": "Schema for AI-consumable component library documentation",
  "type": "object",
  "required": ["library", "installation", "components", "analytics", "metadata"],
  "properties": {
    "library": {
      "type": "object",
      "description": "Library metadata",
      "required": ["name", "version", "description", "framework"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Package name"
        },
        "version": {
          "type": "string",
          "description": "Semantic version"
        },
        "description": {
          "type": "string",
          "description": "Library description"
        },
        "framework": {
          "type": "string",
          "description": "Framework (e.g., React, Vue, Angular)"
        },
        "typescript": {
          "type": "boolean",
          "description": "Whether the library uses TypeScript"
        },
        "repository": {
          "type": "string",
          "description": "Repository URL"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Package keywords"
        }
      }
    },
    "installation": {
      "type": "object",
      "description": "Installation instructions",
      "required": ["command"],
      "properties": {
        "command": {
          "type": "string",
          "description": "Installation command"
        },
        "peerDependencies": {
          "type": "object",
          "description": "Required peer dependencies"
        }
      }
    },
    "setup": {
      "type": "object",
      "description": "Setup and configuration information"
    },
    "components": {
      "type": "array",
      "description": "List of components in the library",
      "items": {
        "type": "object",
        "required": ["name", "import", "description", "props"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Component name"
          },
          "import": {
            "type": "string",
            "description": "Import statement for the component"
          },
          "description": {
            "type": "string",
            "description": "Component description"
          },
          "props": {
            "type": "object",
            "description": "Component props/properties",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "description": "TypeScript type definition"
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether the prop is required"
                },
                "default": {
                  "description": "Default value"
                },
                "description": {
                  "type": "string",
                  "description": "Prop description"
                }
              }
            }
          },
          "events": {
            "type": "array",
            "description": "Events emitted by the component",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Event name"
                },
                "description": {
                  "type": "string",
                  "description": "Event description"
                },
                "eventType": {
                  "type": "string",
                  "description": "Analytics event type"
                },
                "metadata": {
                  "type": "string",
                  "description": "Description of event metadata"
                }
              }
            }
          },
          "examples": {
            "type": "array",
            "description": "Usage examples",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Example title"
                },
                "code": {
                  "type": "string",
                  "description": "Example code snippet"
                }
              }
            }
          }
        }
      }
    },
    "analytics": {
      "type": "object",
      "description": "Analytics integration information",
      "properties": {
        "eventStructure": {
          "type": "object",
          "description": "Analytics event data structure"
        },
        "integrationGuide": {
          "type": "object",
          "description": "Platform integration guides"
        },
        "commonPatterns": {
          "type": "object",
          "description": "Common usage patterns"
        }
      }
    },
    "bestPractices": {
      "type": "array",
      "description": "Best practices for using the library",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Practice title"
          },
          "description": {
            "type": "string",
            "description": "Practice description"
          },
          "example": {
            "type": "string",
            "description": "Practice example"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Manifest metadata",
      "required": ["generatedAt", "version"],
      "properties": {
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "generatedBy": {
          "type": "string",
          "description": "Tool that generated the manifest"
        },
        "version": {
          "type": "string",
          "description": "Manifest schema version"
        },
        "purpose": {
          "type": "string",
          "description": "Manifest purpose"
        }
      }
    }
  }
}
